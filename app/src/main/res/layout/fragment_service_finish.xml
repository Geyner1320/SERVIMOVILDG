<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mecanico.service_finish">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SERVICIOS"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:text="Selecciona el usuario :"
        android:textSize="17dp"
        android:textStyle="italic" />

    <Spinner
        android:id="@+id/btnspinner"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:text="Fecha de peticiÃ³n :"
        android:textSize="17dp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/txtfech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="180dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="230dp"
        android:text="Nombre :"
        android:textSize="17dp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/txtuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="230dp"
        android:textSize="17dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:text="Referencia :"
        android:textSize="17dp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/txtref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="280dp"
        android:textSize="17dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="330dp"
        android:text="Detalle :"
        android:textSize="17dp"
        android:textStyle="italic" />
    <EditText
        android:id="@+id/txtdetail"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:gravity="start"
        android:textSize="15dp"
        android:enabled="false"
        android:textAlignment="textStart"
        android:inputType="textMultiLine"
        android:background="@drawable/textbox_redondos"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="330dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="420dp"
        android:text="Observaciones :"
        android:textSize="17dp"
        android:textStyle="italic" />
    <EditText
        android:id="@+id/editobserva"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:background="@drawable/textbox_redondos"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="420dp"
        android:textAlignment="textStart"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="500dp"
        android:text="Costo :"
        android:textSize="17dp"
        android:textStyle="italic" />
    <EditText
        android:id="@+id/editcosto"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/textbox_redondos"
        android:layout_marginTop="500dp"
        android:textSize="17dp"
        android:layout_marginLeft="90dp"
        android:inputType="number" />


    <Button
        android:id="@+id/btncosto"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="590dp"
        android:background="@drawable/boton_redondo"
        android:drawableLeft="@drawable/ic_baseline_app_registration_24"
        android:text="Registrar" />

    <TextView
        android:id="@+id/id_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_undraw_personal_finance_tqcd" />


</FrameLayout>