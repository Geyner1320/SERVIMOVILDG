<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mecanico.cashing_mechanic">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="MIS COBROS"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"
        android:text="Usuario"
        android:textSize="20dp"
        android:textStyle="italic"/>

    <Spinner
        android:id="@+id/spin"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="60dp" />



    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="520dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textStyle="italic"
            android:textSize="18dp"
            android:text="Referencia del vehiculo"/>
        <TextView
            android:id="@+id/txtref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:textStyle="italic"
            android:textSize="18dp"
            android:text="fecha de inicio"/>
        <TextView
            android:id="@+id/txtfechI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:textStyle="bold"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160dp"
            android:textStyle="italic"
            android:textSize="18dp"
            android:text="fecha de terminado"/>
        <TextView
            android:id="@+id/txtfechF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="190dp"
            android:textStyle="bold"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="230dp"
            android:textStyle="italic"
            android:textSize="18dp"
            android:text="Detalle del caso"/>
        <EditText
            android:id="@+id/txtcaso"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:gravity="start"
            android:textSize="15dp"
            android:enabled="false"
            android:textAlignment="textStart"
            android:inputType="textMultiLine"
            android:background="@drawable/textbox_redondos"
            android:layout_marginTop="260dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="330dp"
            android:textStyle="italic"
            android:textSize="18dp"
            android:text="Observaciones del mecanico"/>
        <EditText
            android:id="@+id/observamechanic"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:enabled="false"
            android:background="@drawable/textbox_redondos"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="360dp"
            android:textAlignment="textStart"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="430dp"
            android:textStyle="italic"
            android:textSize="18dp"
            android:text="Costo"/>
        <TextView
            android:id="@+id/txtcosto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="460dp"
            android:textStyle="italic"
            android:textSize="25dp" />



    </androidx.cardview.widget.CardView>

</FrameLayout>